#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

user=$(whoami)
disk="roomy-pod"
backup_path="/run/media/$user/$disk/backups/"

function backup {
  home_folder_name="$1"
  echo "==> backing up $home_folder_name"
  rsync -azr --progress \
    "$HOME/$home_folder_name" \
    "$backup_path/$home_folder_name"
}

backup "Desktop"
backup "Documents"
backup "Music"
backup "Pictures"
backup "Videos"
backup "bin"
